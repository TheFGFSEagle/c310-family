<?xml version="1.0"?>
<PropertyList>
	<default>
		<menu n="10">
			<label>Cessna 310A</label>
			<enabled type="bool">true</enabled>
			
			<item>
				<label>Autostart / autostop</label>
				<binding>
					<command>nasal</command>
					<script>c310.autostartstop();</script>
				</binding>
			</item>
			
			<item>
				<label>Equipment options</label>
				<binding>
					<command>nasal</command>
					<script>c310.dialogs.equipment_dialog.show();</script>
				</binding>
			</item>
			
			<item>
				<label>Settings</label>
				<binding>
					<command>nasal</command>
					<script>c310.dialogs.settings_dialog.show();</script>
				</binding>
			</item>
			
			<item>
				<label>Parts</label>
				<binding>
					<command>nasal</command>
					<script>c310.parts.dialog.show();</script>
				</binding>
			</item>
			
			<item>
				<label>Failures</label>
				<binding>
					<command>nasal</command>
					<script>c310.failures.dialog.show();</script>
				</binding>
			</item>
			
			<item>
				<label>Recharge batteries</label>
				<binding>
					<command>property-assign</command>
					<property>/systems/electrical/suppliers/battery[0]/charge-amp_hours</property>
					<property>/systems/electrical/suppliers/battery[0]/capacity-amp_hours</property>
				</binding>
				<binding>
					<command>property-assign</command>
					<property>/systems/electrical/suppliers/battery[1]/charge-amp_hours</property>
					<property>/systems/electrical/suppliers/battery[1]/capacity-amp_hours</property>
				</binding>
			</item>
			
			<!--<item>
				<label>Select Livery</label>
				<binding>
					<command>nasal</command>
					<script>aircraft.livery.dialog.open()</script>
				</binding>
			</item>-->
		</menu>
	</default>
</PropertyList>
