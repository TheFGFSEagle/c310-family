<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<property value="0">/systems/vacuum/pump-line-leak-norm[0]</property>
	<property value="0">/systems/vacuum/pump-line-clogged-norm[0]</property>
	<property value="0">/systems/vacuum/pump-line-leak-norm[1]</property>
	<property value="0">/systems/vacuum/pump-line-clogged-norm[1]</property>
	<property value="0">/systems/vacuum/directional-gyro-line-leak-norm</property>
	<property value="0">/systems/vacuum/directional-gyro-line-clogged-norm</property>
	<property value="0">/systems/vacuum/attitude-indicator-line-leak-norm</property>
	<property value="0">/systems/vacuum/attitude-indicator-line-clogged-norm</property>
	
	<filter>
		<type>gain</type>
		<input>/controls/vacuum/gauge-source-selector</input>
		<output>/systems/vacuum/gauge-source</output>
	</filter>
	
	<filter>
		<type>gain</type>
		<input>
			<expression>
				<product>
					<property>/systems/vacuum/pump[0]/suction-inhg</property>
					<dif>
						<value>1</value>
						<product>
							<property>/systems/vacuum/pump-line-leak-norm[0]</property>
							<value>0.5</value>
						</product>
						<property>/systems/vacuum/pump-line-clogged-norm[0]</property>
					</dif>
				</product>
			</expression>
		</input>
		<output>/systems/vacuum/pump-line-suction-inhg[0]</output>
		<min>0</min>
		<max>10</max>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<expression>
				<product>
					<property>/systems/vacuum/pump[1]/suction-inhg</property>
					<dif>
						<value>1</value>
						<product>
							<property>/systems/vacuum/pump-line-leak-norm[1]</property>
							<value>0.5</value>
						</product>
						<property>/systems/vacuum/pump-line-clogged-norm[1]</property>
					</dif>
				</product>
			</expression>
		</input>
		<output>/systems/vacuum/pump-line-suction-inhg[1]</output>
		<min>0</min>
		<max>10</max>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<expression>
				<max>
					<property>/systems/vacuum/pump-line-suction-inhg[0]</property>
					<property>/systems/vacuum/pump-line-suction-inhg[1]</property>
				</max>
			</expression>
		</input>
		<output>/systems/vacuum/test-valve-suction-inhg</output>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<expression>
				<product>
					<property>/systems/vacuum/test-valve-suction-inhg</property>
					<dif>
						<value>1</value>
						<product>
							<property>/systems/vacuum/directional-gyro-line-leak-norm</property>
							<value>0.5</value>
						</product>
						<property>/systems/vacuum/directional-gyro-line-clogged-norm</property>
					</dif>
				</product>
			</expression>
		</input>
		<output>/systems/vacuum/directional-gyro-suction-inhg</output>
		<min>0</min>
		<max>10</max>
	</filter>
	<filter>
		<type>gain</type>
		<input>
			<expression>
				<product>
					<property>/systems/vacuum/test-valve-suction-inhg</property>
					<dif>
						<value>1</value>
						<product>
							<property>/systems/vacuum/attitude-indicator-line-leak-norm</property>
							<value>0.5</value>
						</product>
						<property>/systems/vacuum/attitude-indicator-line-clogged-norm</property>
					</dif>
				</product>
			</expression>
		</input>
		<output>/systems/vacuum/attitude-indicator-suction-inhg</output>
		<min>0</min>
		<max>10</max>
	</filter>
	
	<filter>
		<type>noise-spike</type>
		<input>
			<condition>
				<equals>
					<property>/systems/vacuum/gauge-source</property>
					<value>0</value>
				</equals>
			</condition>
			<property>/systems/vacuum/pump-line-suction-inhg[0]</property>
		</input>
		<input>
			<condition>
				<equals>
					<property>/systems/vacuum/gauge-source</property>
					<value>1</value>
				</equals>
			</condition>
			<property>/systems/vacuum/directional-gyro-suction-inhg</property>
		</input>
		<input>
			<condition>
				<equals>
					<property>/systems/vacuum/gauge-source</property>
					<value>2</value>
				</equals>
			</condition>
			<property>/systems/vacuum/attitude-indicator-suction-inhg</property>
		</input>
		<input>
			<condition>
				<equals>
					<property>/systems/vacuum/gauge-source</property>
					<value>3</value>
				</equals>
			</condition>
			<property>/systems/vacuum/pump-line-suction-inhg[1]</property>
		</input>
		<output>/systems/vacuum/gauge-suction-inhg</output>
		<max-rate-of-change>5</max-rate-of-change>
	</filter>
</PropertyList>
