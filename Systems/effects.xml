	<filter>
		<name>Splash X</name>
		<update-interval-secs>0.1</update-interval-secs>
		<type>gain</type>
		<input>
			<expression>
				<product>
					<dif>
						<value>0.85</value>
						<product>
							<property>/velocities/airspeed-kt</property>
							<value>0.06</value>
						</product>
					</dif>
					<cos>
						<property>/orientation/beta-rad</property>
					</cos>
				</product>
			</expression>
		</input>
		<output>interior/windows/front/splash-vector-x</output>
	</filter>
	<filter>
		<name>Splash Y</name>
		<update-interval-secs>0.1</update-interval-secs>
		<type>gain</type>
		<input>
			<expression>
				<product>
					<dif>
						<value>0.35</value>
						<product>
							<property>/velocities/airspeed-kt</property>
							<value>-0.03</value>
						</product>
					</dif>
					<sin>
						<property>/orientation/beta-rad</property>
					</sin>
				</product>
			</expression>
		</input>
		<output>interior/windows/front/splash-vector-y</output>
	</filter>
	<filter>
		<name>Splash Z</name>
		<update-interval-secs>0.1</update-interval-secs>
		<type>gain</type>
		<input>
			<expression>
				<dif>
					<value>1</value>
					<product>
						<value>-0.002</value>
						<property>/velocities/airspeed-kt</property>
					</product>
				</dif>
			</expression>
		</input>
		<output>interior/windows/front/splash-vector-z</output>
	</filter>
</PropertyList>
