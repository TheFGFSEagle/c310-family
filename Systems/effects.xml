<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<property-root>/sim/model/effects</property-root>
	
	<filter>
		<type>gain</type>
		<gain>interior/windows/fog-enabled</gain>
		<input>/environment/aircraft-effects/fog-level</input>
		<output>interior/windows/fog-level</output>
	</filter>
	
	<filter>
		<type>gain</type>
		<gain>interior/windows/frost-enabled</gain>
		<input>/environment/aircraft-effects/frost-level</input>
		<output>interior/windows/frost-level</output>
	</filter>
	
	<filter>
		<type>gain</type>
		<gain>interior/windows/rain-enabled</gain>
		<input>/environment/aircraft-effects/rain-norm</input>
		<output>interior/windows/rain</output>
	</filter>
	
	<filter>
		<type>gain</type>
		<gain>interior/windows/rain-enabled</gain>
		<input>/environment/aircraft-effects/ground-splash-norm</input>
		<output>interior/windows/ground-splash-norm</output>
	</filter>
	
	<filter>
		<name>splash-x</name>
		<update-interval-secs type="double">0.1</update-interval-secs>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/airspeed-kt</property>
					<entry><ind>0</ind><dep>-0.33 </dep></entry>
					<entry><ind>4</ind><dep>-0.33</dep></entry>
					<entry><ind>5</ind><dep>-1.7</dep></entry>
					<entry><ind>200</ind><dep>-8.4</dep></entry>
				</table>
			</expression>
		</input>
		<output>
			<property>/environment/aircraft-effects/splash-x</property>
		</output>
	</filter>
	<filter>
		<name>splash-y</name>
		<update-interval-secs type="double">0.1</update-interval-secs>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<prod>
					<sin>
						<property>/orientation/side-slip-rad</property>
					</sin>
					<property>/velocities/airspeed-kt</property>
					<value>0.2</value>
				</prod>
			</expression>
		</input>
		<output>
			<property>/environment/aircraft-effects/splash-y</property>
		</output>
	</filter>
	<filter>
		<name>splash-z</name>
		<update-interval-secs type="double">0.1</update-interval-secs>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<expression>
				<table>
					<property>/velocities/airspeed-kt</property>
					<entry><ind>0</ind><dep>0.82</dep></entry>
					<!--<entry><ind>4</ind><dep>0.82</dep></entry>-->
					<entry><ind>5</ind><dep>-0.17</dep></entry>
					<entry><ind>200</ind><dep>-1.4</dep></entry>
				</table>
			</expression>
		</input>
		<output>
			<property>/environment/aircraft-effects/splash-z</property>
		</output>
	</filter>
</PropertyList>
