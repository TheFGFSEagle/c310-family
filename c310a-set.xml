<?xml version="1.0"?>

<PropertyList>
	<sim>
		<description>Cessna 310A (JSBsim)</description>
		
		<rating>
			<FDM type="int">4</FDM>
			<systems type="int">4</systems>
			<cockpit type="int">4</cockpit>
			<model type="int">5</model>
		</rating>
		
		<flight-model>jsb</flight-model>
		<aero>Systems/310a-fdm</aero>
		
		<model>
			<path>Aircraft/c310-family/Models/c310a.xml</path>
			
			<controls>
				<show-yokes type="bool">true</show-yokes>
			</controls>
		</model>
		
		<systems>
			<electrical>
				<path>Systems/electrical.xml</path>
			</electrical>
		</systems>
		
		<sound>
			<path>Systems/sound.xml</path>
		</sound>
		
		<aircraft-data>
			<path>/sim/model/controls/show-yokes</path>
		</aircraft-data>
		
		<view n="0">
			<internal>true</internal>
			<config>
				<x-offset-m>-0.33</x-offset-m>
				<y-offset-m>0.25</y-offset-m>
				<z-offset-m>1.45</z-offset-m>
				<pitch-offset-deg>-10</pitch-offset-deg>
				<default-field-of-view-deg>95</default-field-of-view-deg>
			</config>
		</view>
	</sim>
	
	<gear>
		<gear>
			<steering-deg alias="/fdm/jsbsim/fcs/steer-pos-deg"/>
		</gear>
	</gear>
	
	<surface-positions>
		<elevator-deg alias="/fdm/jsbsim/fcs/elevator-pos-deg"/>
		<elevator-trim-tab-deg alias="/fdm/jsbsim/fcs/elevator-trim-tab-pos-deg"/>
		<left-aileron-deg alias="/fdm/jsbsim/fcs/left-aileron-pos-deg"/>
		<left-aileron-trim-tab-deg alias="/fdm/jsbsim/fcs/left-aileron-trim-tab-pos-deg"/>
		<right-aileron-deg alias="/fdm/jsbsim/fcs/right-aileron-pos-deg"/>
		<right-aileron-trim-tab-deg alias="/fdm/jsbsim/fcs/right-aileron-trim-tab-pos-deg"/>
		<rudder-deg alias="/fdm/jsbsim/fcs/rudder-pos-deg"/>
		<rudder-trim-tab-deg alias="/fdm/jsbsim/fcs/rudder-trim-tab-pos-deg"/>
		<flaps-deg alias="/fdm/jsbsim/fcs/flap-pos-deg"/>
	</surface-positions>
	
	<limits>
		<max-flap-extension-speed>
			<flaps>0.3</flaps>
			<speed>155</speed>
		</max-flap-extension-speed>
		<max-flap-extension-speed>
			<flaps>0.6</flaps>
			<speed>140</speed>
		</max-flap-extension-speed>
		<max-flap-extension-speed>
			<flaps>0.9</flaps>
			<speed>140</speed>
		</max-flap-extension-speed>
		<max-gear-extension-speed>140</max-gear-extension-speed>
		<max-positive-g>3.5</max-positive-g>
		<max-negative-g>-1.52</max-negative-g>
		<vne>223</vne>
	</limits>
</PropertyList>
