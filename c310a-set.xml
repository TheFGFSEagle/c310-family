<?xml version="1.0"?>

<PropertyList>
	<sim>
		<description>Cessna 310A (JSBsim)</description>
		<minimum-fg-version>2020.4.0</minimum-fg-version>
		
		<rating>
			<FDM type="int">4</FDM>
			<systems type="int">4</systems>
			<cockpit type="int">4</cockpit>
			<model type="int">5</model>
		</rating>
		
		<flight-model>jsb</flight-model>
		<aero>Systems/310a-fdm</aero>
		
		<model>
			<path>Aircraft/c310-family/Models/c310a.xml</path>
			
			<controls>
				<show-yokes type="bool">true</show-yokes>
			</controls>
		</model>
		
		<systems>
			<electrical>
				<path>Systems/electrical.xml</path>
			</electrical>
			
			<property-rule n="100">
				<name>Instrument indications</name>
				<path>Systems/instruments.xml</path>
			</property-rule>
		</systems>
		
		<sound>
			<path>Systems/sound.xml</path>
		</sound>
		
		<aircraft-data>
			<path>/sim/model/controls/show-yokes</path>
		</aircraft-data>
		
		<view n="0">
			<internal>true</internal>
			<config>
				<x-offset-m>-0.33</x-offset-m>
				<y-offset-m>0.25</y-offset-m>
				<z-offset-m>1.45</z-offset-m>
				<pitch-offset-deg>-10</pitch-offset-deg>
				<default-field-of-view-deg>95</default-field-of-view-deg>
			</config>
		</view>
		
		<equipment>
			<auxiliary-fuel-tanks type="bool">false</auxiliary-fuel-tanks>
		</equipment>
		
		<menubar include="gui/menubar.xml"/>
	</sim>
	
	<gear>
		<gear>
			<steering-deg alias="/fdm/jsbsim/fcs/steer-pos-deg"/>
		</gear>
	</gear>
	
	<surface-positions>
		<elevator-deg alias="/fdm/jsbsim/fcs/elevator-pos-deg"/>
		<elevator-trim-tab-deg alias="/fdm/jsbsim/fcs/elevator-trim-tab-pos-deg"/>
		<left-aileron-deg alias="/fdm/jsbsim/fcs/left-aileron-pos-deg"/>
		<left-aileron-trim-tab-deg alias="/fdm/jsbsim/fcs/left-aileron-trim-tab-pos-deg"/>
		<right-aileron-deg alias="/fdm/jsbsim/fcs/right-aileron-pos-deg"/>
		<right-aileron-trim-tab-deg alias="/fdm/jsbsim/fcs/right-aileron-trim-tab-pos-deg"/>
		<rudder-deg alias="/fdm/jsbsim/fcs/rudder-pos-deg"/>
		<rudder-trim-tab-deg alias="/fdm/jsbsim/fcs/rudder-trim-tab-pos-deg"/>
		<flaps-deg alias="/fdm/jsbsim/fcs/flap-pos-deg"/>
	</surface-positions>
	
	<limits>
		<max-flap-extension-speed>
			<flaps>0.3</flaps>
			<speed>155</speed>
		</max-flap-extension-speed>
		<max-flap-extension-speed>
			<flaps>0.6</flaps>
			<speed>140</speed>
		</max-flap-extension-speed>
		<max-flap-extension-speed>
			<flaps>0.9</flaps>
			<speed>140</speed>
		</max-flap-extension-speed>
		<max-gear-extension-speed>140</max-gear-extension-speed>
		<max-positive-g>3.5</max-positive-g>
		<max-negative-g>-1.52</max-negative-g>
		<vne>223</vne>
	</limits>
	
	<controls>
		<fuel>
			<selector type="int">0</selector>
			<selector type="int">0</selector>
			<tank n="0">
				<drain-valve type="bool">false</drain-valve>
			</tank>
			<tank n="1">
				<drain-valve type="bool">false</drain-valve>
			</tank>
			<tank n="2">
				<drain-valve type="bool">false</drain-valve>
			</tank>
			<tank n="3">
				<drain-valve type="bool">false</drain-valve>
			</tank>
			<tank n="4">
				<drain-valve type="bool">false</drain-valve>
			</tank>
			<tank n="5">
				<drain-valve type="bool">false</drain-valve>
			</tank>
			<tank n="8">
				<drain-valve type="bool">false</drain-valve>
			</tank>
			<tank n="9">
				<drain-valve type="bool">false</drain-valve>
			</tank>
		</fuel>
		<gear>
			<brake-parking type="bool">true</brake-parking>
		</gear>
	</controls>
	
	<consumables>
		<fuel>
			<tank>
				<name>Left wingtip</name>
			</tank>
			<tank>
				<name>Right wingtip</name>
			</tank>
			<tank>
				<name>Left auxiliary</name>
				<hidden type="bool">true</hidden>
			</tank>
			<tank>
				<name>Right auxiliary</name>
				<hidden type="bool">true</hidden>
			</tank>
			<tank>
				<hidden type="bool">true</hidden>
			</tank>
			<tank>
				<hidden type="bool">true</hidden>
			</tank>
			<tank>
				<hidden type="bool">true</hidden>
			</tank>
			<tank>
				<hidden type="bool">true</hidden>
			</tank>
			<tank>
				<hidden type="bool">true</hidden>
			</tank>
			<tank>
				<hidden type="bool">true</hidden>
			</tank>
			<tank>
				<hidden type="bool">true</hidden>
			</tank>
			<tank>
				<hidden type="bool">true</hidden>
			</tank>
			<tank>
				<hidden type="bool">true</hidden>
			</tank>
			<tank>
				<hidden type="bool">true</hidden>
			</tank>
		</fuel>
	</consumables>
	
	<payload>
		<weight n="0">
			<name type="string">Pilot</name>
			<weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[0]"/>
			<min-lb type="double">0.0</min-lb>
			<max-lb type="double">300.0</max-lb>
		</weight>
		<weight n="1">
			<name type="string">Copilot</name>
			<weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[1]"/>
			<min-lb type="double">0.0</min-lb>
			<max-lb type="double">300.0</max-lb>
		</weight>
		<weight n="2">
			<name type="string">Left passenger</name>
			<weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[2]"/>
			<min-lb type="double">0.0</min-lb>
			<max-lb type="double">300.0</max-lb>
		</weight>
		<weight n="3">
			<name type="string">Right passenger</name>
			<weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[3]"/>
			<min-lb type="double">0.0</min-lb>
			<max-lb type="double">300.0</max-lb>
		</weight>
		<weight n="4">
			<name type="string">Baggage</name>
			<weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[4]"/>
			<min-lb type="double">0.0</min-lb>
			<max-lb type="double">200.0</max-lb>
		</weight>
	</payload>
	
	<nasal>
		<c310>
			<file>Nasal/c310.nas</file>
		</c310>
	</nasal>
</PropertyList>
