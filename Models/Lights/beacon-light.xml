<?xml version="1.0"?>
<PropertyList>
	<model>
		<path>als-beacon-light.xml</path>
		<overlay>
			<params>
				<pointing_x>sim/model/lights/beacon/pointing-x[0]</pointing_x>
				<pointing_y>sim/model/lights/beacon/pointing-y[0]</pointing_y>
			</params>
		</overlay>
	</model>
	<model>
		<path>als-beacon-light.xml</path>
		<overlay>
			<params>
				<pointing_x>sim/model/lights/beacon/pointing-x[1]</pointing_x>
				<pointing_y>sim/model/lights/beacon/pointing-y[1]</pointing_y>
			</params>
		</overlay>
	</model>
	
	<model>
		<name>LightPlate</name>
		<path>lights.xml</path>
		<overlay>
			<params>
				<light-used>red</light-used>
				<show-prop>sim/model/lights/beacon/brightness-norm</show-prop>
			</params>
		</overlay>
	</model>
	
	<animation>
		<type>select</type>
		<object-name>LightPlate</object-name>
		<condition>
			<or>
				<less-than>
					<expression>
						<abs>
							<dif>
								<property>sim/current-view/heading-offset-deg</property>
								<mod>
									<sum>
										<property>sim/model/lights/beacon/rotation-deg</property>
										<value>180</value>
									</sum>
									<value>360</value>
								</mod>
							</dif>
						</abs>
					</expression>
					<value>90</value>
				</less-than>
				<less-than>
					<expression>
						<abs>
							<dif>
								<property>sim/current-view/heading-offset-deg</property>
								<property>sim/model/lights/beacon/rotation-deg</property>
							</dif>
						</abs>
					</expression>
					<value>90</value>
				</less-than>
			</or>
		</condition>
	</animation>
	
	<light>
		<name>BeaconLight1</name>
		<type>spot</type>
		<position>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</position>
		<direction>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</direction>
		<ambient>
			<r>0.5</r>
			<g>0.1</g>
			<b>0.1</b>
			<a>0</a>
		</ambient>
		<diffuse>
			<r>1</r>
			<g>0.2</g>
			<b>0.2</b>
			<a>0</a>
		</diffuse>
		<specular>
			<r>1</r>
			<g>0.2</g>
			<b>0.2</b>
			<a>0</a>
		</specular>
		<attenuation>
			<c>0.25</c>
			<l>0.1</l>
			<q>0.25</q>
		</attenuation>
		<spot-exponent>3</spot-exponent>
		<spot-cutoff>70</spot-cutoff>
		<range-m>10</range-m>
		<dim-factor>
			<property>sim/model/lights/beacon/brightness-norm</property>
		</dim-factor>
	</light>
		
	<light>
		<name>BeaconLight2</name>
		<type>spot</type>
		<position>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</position>
		<direction>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</direction>
		<ambient>
			<r>0.5</r>
			<g>0.1</g>
			<b>0.1</b>
			<a>0</a>
		</ambient>
		<diffuse>
			<r>1</r>
			<g>0.2</g>
			<b>0.2</b>
			<a>0</a>
		</diffuse>
		<specular>
			<r>1</r>
			<g>0.2</g>
			<b>0.2</b>
			<a>0</a>
		</specular>
		<attenuation>
			<c>0.25</c>
			<l>0.1</l>
			<q>0.25</q>
		</attenuation>
		<spot-exponent>3</spot-exponent>
		<spot-cutoff>70</spot-cutoff>
		<range-m>10</range-m>
		<dim-factor>
			<property>sim/model/lights/beacon/brightness-norm</property>
		</dim-factor>
	</light>

	<animation>
		<type>rotate</type>
		<object-name>LightPlate</object-name>
		<object-name>BeaconLight1</object-name>
		<object-name>BeaconLight2</object-name>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
		<property>sim/model/lights/beacon/rotation-deg</property>
	</animation>
</PropertyList>
