	<path>gnc-255.ac</path>
	
	<animation>
		<type>select</type>
		<object-name>GNC255Display1</object-name>
		<condition>
			<value alias="/params/instance"/>
			<value>0</value>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>GNC255Display2</object-name>
		<condition>
			<value alias="/params/instance"/>
			<value>1</value>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>GNC255Display3</object-name>
		<condition>
			<value alias="/params/instance"/>
			<value>2</value>
		</condition>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>GNC255Display1</object-name>
		<object-name>GNC255Display2</object-name>
		<object-name>GNC255Display3</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
			<factor-prop alias="/params/display-brightness-prop"/>
		</emission>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>CommVolumeKnob</object-name>
		<axis>
			<object-name>CommVolumeKnobAxis</object-name>
			<swap-axis-direction/>
		</axis>
		<property alias="/params/comm-volume-prop"/>
		<factor>270</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property alias="/params/comm-volume-prop"/>
				<factor>0.05</factor>
				<min>0</min>
				<max>1</max>
			</binding>
		</action>
		<increase>
			<binding>
				<condition>
					<greater-than-equals>
						<property alias="/params/comm-volume-prop"/>
						<value>0</value>
					</greater-than-equals>
				</condition>
				<command>property-assign</command>
				<property alias="/params/comm-power-btn-prop"/>
				<value type="bool">true</value>
			</binding>
		</increase>
		<decrease>
			<binding>
				<condition>
					<less-than-equals>
						<property alias="/params/comm-volume-prop"/>
						<value>0.05</value>
					</less-than-equals>
				</condition>
				<command>property-assign</command>
				<property alias="/params/comm-power-btn-prop"/>
				<value type="bool">false</value>
			</binding>
		</decrease>
		<shift-action>
			<binding>
				<command>property-assign</command>
				<property alias="/params/comm-volume-knob-pressed-prop"/>
				<value type="bool">true</value>
			</binding>
		</shift-action>
		<shift-release>
			<binding>
				<command>property-assign</command>
				<property alias="/params/comm-volume-knob-pressed-prop"/>
				<value type="bool">false</value>
			</binding>
		</shift-release>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>gnc-255-comm-volume</tooltip-id>
				<label>Comm volume: %s</label>
				<measure-text>comm volume: 100%, squelch: off</measure-text>
				<property alias="/params/comm-volume-prop"/>
				<property alias="/params/comm-squelch-prop"/>
				<mapping>nasal</mapping>
				<script><![CDATA[
					var binding = cmdarg();
					var squelch = props.globals.getBoolValue(binding.getValue("property[1]"));
					return sprintf(
						"%s, squelch: %s",
						arg[0] > 0.05 ? sprintf("%3.0f%%", arg[0] * 100) : "off",
						squelch ? "auto" : "off"
					);
				]]></script>
			</binding>
		</hovered>
	</animation>
	
