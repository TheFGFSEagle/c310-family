<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>rpm.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>LeftRPMNeedle</object-name>
		<object-name>RightRPMNeedle</object-name>
		<emission>
			<red>0.95</red>
			<green>1</green>
			<blue>1</blue>
			<factor>
				<expression>
					<sum>
						<product>
							<property>sim/model/lights/uv-instrument[0]/brightness-norm</property>
							<value>0.48</value>
						</product>
						<product>
							<property>sim/model/lights/uv-instrument[1]/brightness-norm</property>
							<value>0.52</value>
						</product>
					</sum>
				</expression>
			</factor>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>LeftRPMNeedle</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/rpm/indicated-rpm[0]</property>
		<factor>0.07</factor>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>RightRPMNeedle</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/rpm/indicated-rpm[1]</property>
		<factor>0.07</factor>
	</animation>
	
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Glass</object-name>
	</effect>
</PropertyList>
