<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>oat.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>Needle</object-name>
		<emission>
			<red>0.95</red>
			<green>1</green>
			<blue>1</blue>
			<factor>
				<expression>
					<sum>
						<product>
							<property>sim/model/lights/uv-instrument[0]/brightness-norm</property>
							<value>0.34</value>
						</product>
						<product>
							<property>sim/model/lights/uv-instrument[1]/brightness-norm</property>
							<value>0.66</value>
						</product>
					</sum>
				</expression>
			</factor>
		</emission>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle</object-name>
		<axis>
			<object-name>NeedleAxis</object-name>
		</axis>
		<property>instrumentation/oat/indicated-outside-air-temperature-degf</property>
		<interpolation>
			<entry>
				<ind>-50</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>120</ind>
				<dep>110</dep>
			</entry>
		</interpolation>
	</animation>
	
	<effect>
		<object-name>Glass</object-name>
		<inherits-from>Effects/model-transparent</inherits-from>
	</effect>
</PropertyList>
