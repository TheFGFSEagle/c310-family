<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>ai.ac</path>
	
	<animation>
		<type>material</type>
		<object-name>RollScale</object-name>
		<object-name>PitchScale</object-name>
		<object-name>Airplane</object-name>
		<object-name>Needle</object-name>
		<emission>
			<red>0.95</red>
			<green>1</green>
			<blue>1</blue>
			<factor>
				<expression>
					<sum>
						<product>
							<property>sim/model/lights/uv-instrument[0]/brightness-norm</property>
							<value>0.55</value>
						</product>
						<product>
							<property>sim/model/lights/uv-instrument[1]/brightness-norm</property>
							<value>0.45</value>
						</product>
					</sum>
				</expression>
			</factor>
		</emission>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>PitchScale</object-name>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
		<property>instrumentation/attitude-indicator/indicated-pitch-deg</property>
		<interpolation>
			<entry>
				<ind>-30</ind>
				<dep>0.0145</dep>
			</entry>
			<entry>
				<ind>-20</ind>
				<dep>0.0086</dep>
			</entry>
			<entry>
				<ind>-10</ind>
				<dep>0.0043</dep>
			</entry>
			<entry>
				<ind>10</ind>
				<dep>-0.0043</dep>
			</entry>
			<entry>
				<ind>20</ind>
				<dep>-0.0086</dep>
			</entry>
			<entry>
				<ind>30</ind>
				<dep>-0.0145</dep>
			</entry>
		</interpolation>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Background</object-name>
		<object-name>RollScale</object-name>
		<object-name>PitchScale</object-name>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/attitude-indicator/indicated-roll-deg</property>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>Airplane</object-name>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
		<property>instrumentation/attitude-indicator/pitch-offset-deg</property>
		<interpolation>
			<entry>
				<ind>-20</ind>
				<dep>-0.0086</dep>
			</entry>
			<entry>
				<ind>-10</ind>
				<dep>-0.0043</dep>
			</entry>
			<entry>
				<ind>10</ind>
				<dep>0.0043</dep>
			</entry>
			<entry>
				<ind>20</ind>
				<dep>0.0086</dep>
			</entry>
		</interpolation>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>PitchOffsetKnob</object-name>
		<axis>
			<object-name>PitchOffsetKnobAxis</object-name>
		</axis>
		<property>instrumentation/attitude-indicator/pitch-offset-deg</property>
		<factor>10</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/attitude-indicator/pitch-offset-deg</property>
				<min>-20</min>
				<max>20</max>
				<factor>0.5</factor>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>attitude-indicator-pitch-offset-knob</tooltip-id>
				<label>Pitch offset: %2.1f°</label>
				<measure-text>Pitch offset: -20.0°</measure-text>
				<property>instrumentation/attitude-indicator/pitch-offset-deg</property>
			</binding>
		</hovered>
	</animation>
	
	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Glass</object-name>
	</effect>
</PropertyList>
