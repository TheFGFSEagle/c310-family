<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>fuel-selector.ac</path>
	
	<animation>
		<condition>
			<not>
				<property>sim/equipment/auxiliary-fuel-tanks</property>
			</not>
		</condition>
		<type>material</type>
		<object-name>Face</object-name>
		<texture>right-fuel-selector.png</texture>
	</animation>
	
	<animation>
		<condition>
			<property>sim/equipment/auxiliary-fuel-tanks</property>
		</condition>
		<type>material</type>
		<object-name>Face</object-name>
		<texture>right-fuel-selector-auxiliary.png</texture>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>Handle</object-name>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
		<property>controls/fuel/selector[1]</property>
		<factor>90</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/fuel/selector[1]</property>
				<min>0</min>
				<max>3</max>
				<factor>1</factor>
			</binding>
		</action>
		<increase>
			<binding>
				<condition>
					<and>
						<not>
							<property>sim/equipment/auxiliary-fuel-tanks</property>
						</not>
						<equals>
							<property>controls/fuel/selector[1]</property>
							<value>2</value>
						</equals>
					</and>
				</condition>
				<command>property-assign</command>
				<property>controls/fuel/selector[1]</property>
				<value>3</value>
			</binding>
		</increase>
		<decrease>
			<binding>
				<condition>
					<and>
						<not>
							<property>sim/equipment/auxiliary-fuel-tanks</property>
						</not>
						<equals>
							<property>controls/fuel/selector[1]</property>
							<value>2</value>
						</equals>
					</and>
				</condition>
				<command>property-assign</command>
				<property>controls/fuel/selector[1]</property>
				<value>1</value>
			</binding>
		</decrease>
		<hovered>
			<binding>
				<command>show-tooltip</command>
				<tooltip-id>right-fuel-selector</tooltip-id>
				<property>controls/fuel/selector[1]</property>
				<label>Right engine fuel feed: %s</label>
				<mapping>nasal</mapping>
				<script>
					return ["Off", "Left main", "Left aux" "Right main"][arg[0]];
				</script>
			</binding>
		</hovered>
	</animation>
</PropertyList>
